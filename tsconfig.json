{
  "buildOnSave": false,
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "app/scripts/modules",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2016", "dom"],
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false, // should really get to a place where we can turn this on
    "outDir": "transpiled",
    "pretty": true,
    "removeComments": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": false, // should really get to a place where we can turn this on
    "target": "es5",
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "angular",
      "angular-mocks",
      "angular-ui-router",
      "jasmine",
      "jquery",
      "lodash",
      "moment-timezone",
      "node"
    ]
  },
  "exclude": [
    "build",
    "node",
    "node_modules",
    "transpiled"
  ],
  "include": [
    "app/scripts/modules/**/*.ts"
  ]
}
