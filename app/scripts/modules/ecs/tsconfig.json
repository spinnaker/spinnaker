{
  "extends": "../../../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "lib",
    "rootDir": "./src",
    "typeRoots": ["../../../../node_modules/@types"],
    "paths": {
      "@spinnaker/core": ["../../core/lib"],
      "core/*": ["../../core/lib/*"],
      "@spinnaker/amazon": ["../../amazon/dist"],
      "@spinnaker/docker": ["../../docker/lib"],
      "ecs/*": ["*"],
      "ecs": ["."]
    }
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["./lib", "**/*.spec.*"]
}
